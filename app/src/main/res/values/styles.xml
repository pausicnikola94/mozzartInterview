<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabsTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:mode">twoLine</item>
    </style>

    <style name="GameItemTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CountryTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>
</resources>